{# empty Twig template #}
{% extends 'baseizmo.html.twig' %}

{% block content %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Project Add</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <a href="#">Home</a>
                            </li>
                            <li class="breadcrumb-item active">Project Add</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">            
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">General</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                {{ form_start(form) }}
                <div class="card-body">
                    <div class="row">
                        <!-- Row 1 -->
                        <div class="form-group col-md-6">
                            <label class="col-md-3 control-label" for="name">
                                {{ form_label(form.name) }}
                            </label>                                                       
                            {{ form_widget(form.name,{'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group col-md-6">
                            <label class="col-md-3 control-label" for="description">
                                {{ form_label(form.description) }}
                            </label>                        
                            {{ form_widget(form.description,{'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <!-- Row 2 -->
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="col-md-3 control-label" for="price">
                                {{ form_label(form.price) }}
                            </label> 
                            {{ form_widget(form.price,{'attr': {'class': 'form-control'} }) }}   
                        </div>                            
                        <div class="form-group col-md-6">
                            <label class="col-md-3 control-label" for="image">
                                {{ form_label(form.image) }}
                            </label>
                            {# {{ form_widget(form.image,{'attr': {'class': 'form-control'} }) }} #}
                            {% if product.id and  product.image %}                                
                                <span class="pull-left clear ml5 font-weight-light">  
                                    {{ product.image }}                                 
                                   <a href="/product/download/{{ product.id }}" class="ml5mr5 font-weight-bold"> Download</a>
                                </span>
                                {# {{ form_widget(form.image,{'attr': {'class': 'form-control'} }) }}                                  #}
                            {% else %}
                                {{ form_widget(form.image,{'attr': {'class': 'form-control'} }) }}
                            {% endif %}
                        </div>
                    </div>
                    <!-- Row 3 -->
                    <div class="row">
                        <div class="form-group col-md-6">                           
                            <label class="col-md-3 control-label" for="make_date">Make Date:</label> 
                            <input type="text" id="make_date" name="make_date" class="form-control" value="{{ product.makeDate|date('Y-m-d') }}"></p>                         
                        </div>
                        <div class="form-group col-md-6">
                            <label class="col-md-3 control-label" for="make_date">Expiry Date:</label> 
                            <input type="text" id="expiry_date" name="expiry_date" class="form-control" value="{{ product.expiryDate|date('Y-m-d') }}"></p>                           
                        </div>
                    </div>

                    <!-- Button -->
                    <div class="form-group">
                        <div class="col-md-6"></div>
                        <div class="col-md-6">
                            {{ form_row(form.submit, {'label': 'Create new Project', 'attr': {'class': 'btn btn-success float-right'} }) }} 
                            <a href="{{ path('app_products') }}" class="btn btn-secondary float-right btn-cancel">Cancel</a>                                    
                        </div>
                    </div>
                </div>                           
                </div>
                {{ form_end(form, {render_rest: false}) }}  {# don't render unrendered fields #}
                <!-- /.card-body -->
                
            </div>
            <!-- /.card -->
                
            <div class="row">
                <div class="col-12">
                    <a href="{{ path('app_products') }}" class="btn btn-secondary">Cancel</a>
                    {# {{ form_row(form.submit, {'label': 'Create new Project'}) }}  #}
                    <input type="submit" value="Create new Project" class="btn btn-success float-right">
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>    
{% endblock %}


{% block javascripts %}                           
    {# <script type="text/javascript" src="../js/main.js"></script> #}
    <script src="{{ asset('js/main.js') }}"></script>      
{% endblock %}